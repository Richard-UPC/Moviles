<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="100dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="293dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="52dp"/>

        <com.androidnetworking.widget.ANImageView
            android:id="@+id/pictureCardView"
            android:layout_width="99dp"
            android:layout_height="134dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/namesTextView"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/guidelineEnd"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Richard Jesús Aranibar Román"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/specialtyTextView"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/guidelineEnd"
            app:layout_constraintTop_toBottomOf="@id/namesTextView"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Informático"/>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pictureCardView"
            app:layout_constraintTop_toBottomOf="@id/specialtyTextView"
            android:layout_margin="8dp"
            android:textSize="10dp"
            android:text="10 años de experiencia trabajando en TIC, trabajo independiente..."
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
        />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintStart_toEndOf="@id/pictureCardView"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            android:layout_margin="8dp"
            app:tint="@color/colorPrimary" />
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/locationIcon"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            app:layout_constraintBottom_toTopOf="@id/phoneTextView"
            android:layout_margin="8dp"
            android:textSize="10dp"
            android:text="Mz: A Lt 5 Soledad Baja - Puente Piedra"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            />
        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_phone_android_24"
            app:layout_constraintStart_toEndOf="@id/pictureCardView"
            app:layout_constraintTop_toBottomOf="@id/locationIcon"
            app:layout_constraintBottom_toBottomOf="@id/contentCardView"
            android:layout_margin="8dp"
            app:tint="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/phoneIcon"
            app:layout_constraintBottom_toBottomOf="@id/contentCardView"
            android:layout_margin="8dp"
            android:textSize="10dp"
            android:text="945433992"
            android:textColor="#000000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>